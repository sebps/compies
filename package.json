{
  "name": "compies",
  "version": "0.0.5",
  "type": "module",
  "author": "sebps",
  "licence": "MIT",
  "main": "dist/compies.umd.js",
  "module": "dist/compies.es.js",
  "exports": {
    ".": {
      "import": "./dist/compies.es.js",
      "require": "./dist/compies.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style": {
      "default": "./dist/compies.css",
      "types": "./dist/style.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && tsc -b && vite build && npm run build:types && npm run postbuild:types && rollup -c rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist temp",
    "pack": "npm pack",
    "postbuild:types": "cp src/style.d.ts dist/style.d.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "openai": "^5.7.0",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.32.0",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5"
  }
}
